<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff7111" >

            <ImageView
                android:id="@+id/ema_webview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ema_account_btn6" />

            <ImageView
                android:id="@+id/ema_webview_imageView_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="2dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/ema_3rd_btn1" />

            <TextView
                android:id="@+id/ema_webView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="EmaView"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"
            android:background="#eeeeee"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/ema_webview_ProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <WebView
                    android:id="@+id/ema_webview_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:orientation="vertical" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <!--
       <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#b3b3b3" />
    -->
    <!-- 底部状态 -->

    <RadioGroup
        android:visibility="gone"
        android:id="@+id/ema_webview_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:background="#dddddd"
        android:orientation="horizontal"
        android:padding="4dp" >

        <RadioButton
            android:id="@+id/ema_webview_account"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/ema_check_btn_accoun"
            android:gravity="center|bottom"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="账户"
            android:textColor="#5F646E"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/ema_webview_gift"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/ema_check_btn_giftbag"
            android:gravity="center|bottom"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="礼包"
            android:textColor="#5F646E"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/ema_webview_promotion"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/ema_check_btn_promotion"
            android:gravity="center|bottom"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="推广"
            android:textColor="#5F646E"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/ema_webview_help"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/ema_check_btn_help"
            android:gravity="center|bottom"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="帮助"
            android:textColor="#5F646E"
            android:textSize="10dp" />
    </RadioGroup>

</RelativeLayout>