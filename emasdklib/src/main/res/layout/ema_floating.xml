<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ema_toolbar_left"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_1_left"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="账户"
            android:textColor="@android:color/white"
            android:textSize="10dp" />

        <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_2_left"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="礼包"
            android:textColor="@android:color/white"
            android:textSize="10dp" />
        
         <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_3_left"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="推广"
            android:textColor="@android:color/white"
            android:textSize="10dp" />

        <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_4_left"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="帮助"
            android:textColor="@android:color/white"
            android:textSize="10dp" />
        <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_5_left"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="充值"
            android:textColor="@android:color/white"
            android:textSize="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ema_img_toolbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ema_floating_icon"
        android:padding="@dimen/ema_toolbar_padding" />

    <LinearLayout
        android:id="@+id/ema_toolbar_right"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_1"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="账户"
            android:textColor="@android:color/white"
            android:textSize="10dp" />

        <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_2"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="礼包"
            android:textColor="@android:color/white"
            android:textSize="10dp" />

        <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_3"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="推广"
            android:textColor="@android:color/white"
            android:textSize="10dp" />
        
        <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_4"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="帮助"
            android:textColor="@android:color/white"
            android:textSize="10dp" />
        <Button
            android:visibility="gone"
            android:id="@+id/ema_btn_5"
            android:layout_width="@dimen/ema_toolbar_width"
            android:layout_height="@dimen/ema_toolbar_height"
            android:background="@null"
            android:padding="@dimen/ema_toolbar_padding"
            android:text="充值"
            android:textColor="@android:color/white"
            android:textSize="10dp" />
    </LinearLayout>

</LinearLayout>